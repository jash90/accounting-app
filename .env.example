# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=accounting_db

# JWT Configuration
# SECURITY: Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_generate_secure_secret_with_crypto_randomBytes
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=CHANGE_ME_generate_secure_refresh_secret_with_crypto_randomBytes
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=development

# Throttler Configuration (rate limiting)
# Set to 'true' to disable rate limiting (useful for E2E tests)
DISABLE_THROTTLER=false

# CORS Configuration
# For production, include your Vercel domain(s) comma-separated
# Example: CORS_ORIGINS=https://your-app.vercel.app,https://custom-domain.com
CORS_ORIGINS=http://localhost:4200

# Frontend URL (used in emails and notifications)
# For production, set to your actual frontend URL
FRONTEND_URL=http://localhost:4200

# AI Agent Configuration
# SECURITY: Must be exactly 32 characters. Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
AI_API_KEY_ENCRYPTION_KEY=CHANGE_ME_must_be_32_characters!

# Anthropic AI Configuration (for Email AI Assistant)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Email Configuration Encryption
# SECURITY: Must be exactly 32 characters. Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=CHANGE_ME_must_be_32_characters!

# SMTP Configuration (Email) - Multi-Provider Support
# The system supports multiple email providers. Users can configure their own
# SMTP/IMAP settings through the UI, or use these defaults for system emails.
SMTP_ENABLED=true

# Default SMTP Provider - Onet.pl
# Replace with your actual credentials or use environment-specific values
SMTP_HOST=smtp.poczta.onet.pl
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@onet.pl
SMTP_PASS=your-password
SMTP_FROM=your-email@onet.pl

# Alternative SMTP Provider - Interia.pl
# Uncomment these lines and comment out Onet configuration to switch providers
# SMTP_HOST=poczta.interia.pl
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=your-email@interia.pl
# SMTP_PASS=your-password
# SMTP_FROM=your-email@interia.pl

# Other supported providers (update host/port accordingly):
# - Gmail: smtp.gmail.com:587 (TLS) or :465 (SSL)
# - Outlook: smtp-mail.outlook.com:587
# - Yahoo: smtp.mail.yahoo.com:587
# - Custom SMTP server: configure host, port, and security settings

# Email Debug Logging
ENABLE_EMAIL_DEBUG=false  # Set to 'true' to enable detailed email operation logging

# Seed Data Configuration (for database seeding)
# These credentials are used by npm run seed for test data

# Admin user
SEED_ADMIN_EMAIL=admin@system.com
SEED_ADMIN_PASSWORD=Admin123456!

# Company Owner
SEED_OWNER_EMAIL=owner@example.com
SEED_OWNER_PASSWORD=Owner123456!

# Employee
SEED_EMPLOYEE_EMAIL=employee@example.com
SEED_EMPLOYEE_PASSWORD=Employee123456!

# Company B Employee (for cross-company E2E tests)
SEED_COMPANY_B_EMPLOYEE_EMAIL=employee.companyb@example.com
SEED_COMPANY_B_EMPLOYEE_PASSWORD=EmployeeB123456!

# Email configuration for seeder
SEED_SMTP_USER=test@example.com
SEED_SMTP_PASSWORD=
SEED_IMAP_USER=test@example.com
SEED_IMAP_PASSWORD=

# Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_LOCAL_URL=/uploads

# S3 Configuration (optional, use when STORAGE_TYPE=s3)
S3_BUCKET=accounting-uploads
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Sentry Error Tracking
SENTRY_DSN=
VITE_SENTRY_DSN=

# Sentry Source Map Upload (CI/build only)
SENTRY_ORG=
SENTRY_PROJECT_WEB=
SENTRY_AUTH_TOKEN=
