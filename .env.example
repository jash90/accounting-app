# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=accounting_db

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=http://localhost:4200

# AI Agent Configuration
AI_API_KEY_ENCRYPTION_KEY=your-32-character-encryption-key-change-in-production

# Email Configuration Encryption
# Generate secure key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-character-encryption-key-change-in-production

# SMTP Configuration (Email)
SMTP_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@accounting.local

# Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_LOCAL_URL=/uploads

# S3 Configuration (optional, use when STORAGE_TYPE=s3)
S3_BUCKET=accounting-uploads
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
